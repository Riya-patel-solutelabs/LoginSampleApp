<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="profile_textstyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/calistoga</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">@dimen/dp_20</item>
        <item name="layout_constraintStart_toStartOf">@id/guideline_left</item>
        <item name="layout_constraintEnd_toEndOf">@id/guideline_right</item>
    </style>
    <style name="MyApp_Transparent">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="datepicker_background" parent="ThemeOverlay.MaterialComponents">
        <item name="android:backgroundTint">@color/dark_purple</item>
    </style>

    <style name="MyToolbarStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:iconTint">@color/purple_700</item>

    </style>

    <style name="TextInputLayout_Style" parent="ThemeOverlay.Material3.TextInputEditText.OutlinedBox">
        <item name="layout_constraintStart_toStartOf">@id/guideline_left</item>
        <item name="layout_constraintEnd_toEndOf">@id/guideline_right</item>
        <item name="android:layout_marginTop">@dimen/dp_5</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
    </style>
    <style name="TextView_Style" parent="Widget.AppCompat.TextView">
        <item name="layout_constraintStart_toStartOf">@id/guideline_left</item>
        <item name="layout_constraintEnd_toEndOf">@id/guideline_right</item>
        <item name="android:layout_marginTop">@dimen/dp_15</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:padding">@dimen/dp_5</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:gravity">left|center</item>
        <item name="android:background">@drawable/border</item>
        <item name="android:drawableTint">@color/white</item>

    </style>
</resources>